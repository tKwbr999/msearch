#!/usr/bin/env node

// msearch CLI entry point
const path = require('path');
const fs = require('fs');

// Get the directory where this script is located
const binDir = __dirname;
const packageDir = path.dirname(binDir);
const buildScript = path.join(packageDir, 'lib', 'miyako-maps-search.js');

// Check if build script exists
if (!fs.existsSync(buildScript)) {
  console.error('Error: msearch build file not found at', buildScript);
  console.error('Please reinstall msearch: npm install -g msearch');
  process.exit(1);
}

// Execute the main script
require(buildScript);